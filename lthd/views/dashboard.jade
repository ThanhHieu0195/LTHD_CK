    script(src='../libs/bootstrap/js/bootstrap.min.js')
    script(src='../libs/js/jquery.sticky-kit.min.js')
    script(src='../libs/js/jquery.scrollbar.min.js')
    script(src='js/script.js')
    script(src='js/noti.js')
    script(src="../libs/js/angular.min.js")
    script(src="../libs/js/angular-route.js")
    script(src="../libs/js/jquery-cookie.js")
